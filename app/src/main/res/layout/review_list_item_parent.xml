<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/parent_review_item_title_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textStyle="bold"
        android:text="Crime Title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/parent_review_item_expand_arrow"/>

    <ImageButton
        android:id="@+id/parent_review_item_expand_arrow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintLeft_toRightOf="@+id/parent_review_item_title_text_view"
        app:layout_constraintBottom_toBottomOf="@+id/parent_review_item_title_text_view"
        app:layout_constraintTop_toTopOf="@+id/parent_review_item_title_text_view"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@android:drawable/arrow_down_float" />

</android.support.constraint.ConstraintLayout>