<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.activity.main.view.MainActivity">

    <ImageButton
        android:id="@+id/image_button_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/most_popular_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MOVIES" />


    <ImageButton
        android:id="@+id/image_button_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/highest_rated_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TV-SHOWS"/>


</FrameLayout>
